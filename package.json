{
  "name": "express-gql-ts",
  "version": "1.0.0",
  "description": "boilerplate for express, graphql, typescript, setup",
  "scripts": {
    "dev": "cross-env ENVIRONMENT=dev nodemon --exec ts-node src/index.ts",
    "gen": "graphql-codegen",
    "prestart": "npm run build",
    "start": "cross-env node dist/index.js",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "postbuild": "copyfiles -u 1 src/modules/**/*.graphql dist",
    "test": "cross-env ENVIRONMENT=test jest --detectOpenHandles",
    "clear-cache": "jest --clearCache"
  },
  "author": "Jan Kaczmarkiewicz",
  "license": "ISC",
  "dependencies": {
    "@graphql-codegen/typescript-mongodb": "^1.13.2",
    "apollo-server": "^2.14.2",
    "apollo-server-core": "^2.12.0",
    "bcryptjs": "^2.4.3",
    "co": "^4.6.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.1.0",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-import": "^1.0.2",
    "graphql-tools": "^4.0.7",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.8",
    "mongoose": "^5.9.7",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.6",
    "reflect-metadata": "^0.1.13",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.3",
    "@graphql-codegen/near-operation-file-preset": "^1.13.2",
    "@graphql-codegen/typescript": "^1.13.2",
    "@graphql-codegen/typescript-resolvers": "^1.13.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.5",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/mongoose": "^5.7.9",
    "@types/node": "^13.11.1",
    "@types/nodemailer": "^6.4.0",
    "@types/yup": "^0.26.35",
    "apollo-server-testing": "^2.12.0",
    "caller-path": "^3.0.0",
    "copyfiles": "^2.2.0",
    "graphql-tag": "^2.10.3",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>src/testUtils/__setup.ts"
    ]
  }
}
