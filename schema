enum record_state {
  unknown
  accepted
  rejected
  uncertain
}

Table house {
  id int [pk, increment]
  number varchar
  street int [ref: > street.id] 
}

Table entry {
  id int [pk, increment]
  id_house int [ref: > house.id] 
  reece_state record_state  
  visit_state record_state
  comment varchar
  id_entry int [ref: > pastoral_visit.id] 
}

Table street {
  id int [pk, increment]
  name varchar
}

Table pastoral_visit {
  id int [pk, increment]
  id_priest int [ref: > priest.id] 
  visit_time time
  reece_time time
  season int [ref: > season.id]
}


Table priest {
  id int [pk, increment]
  username varchar
}

Table acolyte {
  id int [pk, increment]
  username varchar
}

Table season {
  id int [pk, increment]
  year varchar
}


Table pastoral_visit_acolyte {
  id int [pk, increment]
  id_acolyte int [ref: > acolyte.id]
  id_pastoral_visit int [ref: > pastoral_visit.id]
}

